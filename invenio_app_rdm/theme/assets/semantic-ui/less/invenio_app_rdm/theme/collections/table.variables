.ui.table {
  .ui.blue.medium.file-upload-progress {
    &.progress,
    &.success {
      &.active,
      &.disabled {
        margin-bottom: 0;

        &.error {
          margin-bottom: 0;
        }
      }
    }
  }

  .file-table-row {
    .file-table-header-cell {
      padding-top: 10px;
      padding-bottom: 10px;
    }

    .file-table-cell {
      padding-top: 5px;
      padding-bottom: 5px;

      &.file-upload-pending {
        text-align: center;
      }
    }
  }
}
