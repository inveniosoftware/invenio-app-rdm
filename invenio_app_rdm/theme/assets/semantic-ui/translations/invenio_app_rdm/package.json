{
  "name": "invenio-app-rdm-ui",
  "config": {
    "languages": ["en"]
  },
  "devDependencies": {
    "i18next-conv": "^10.2.0",
    "i18next-scanner": "^3.0.0",
    "react-i18next": "^11.11.3"
  },
  "scripts": {
    "extract_messages": "i18next-scanner --config i18next-scanner.config.js '../../js/**/*.{js,jsx}' '!../../js/**/node_modules/**'",
    "postextract_messages": "i18next-conv -l en -s ./messages/en/translations.json -t ./translations.pot && i18next-conv -l en -s ./messages/en/translations.json -t ./messages/en/messages.po",
    "compile_catalog": "node ./scripts/compileCatalog.js",
    "init_catalog": "node ./scripts/initCatalog"
  }
}
